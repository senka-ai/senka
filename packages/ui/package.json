{
  "name": "senka-ui",
  "version": "0.1.3",
  "description": "A modern, type-safe Svelte 5 UI component library with full theme support, accessibility standards, and robust state management patterns",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./components/*": {
      "types": "./dist/components/*.d.ts",
      "svelte": "./dist/components/*.svelte",
      "import": "./dist/components/*.js",
      "default": "./dist/components/*.js"
    },
    "./icons/*": {
      "types": "./dist/icons/*.d.ts",
      "svelte": "./dist/icons/*.svelte",
      "import": "./dist/icons/*.js",
      "default": "./dist/icons/*.js"
    },
    "./styles": "./dist/styles.css",
    "./styles.css": "./dist/styles.css"
  },
  "files": [
    "dist/**/*",
    "README.md"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "dev": "storybook dev -p 6006 --no-open",
    "build": "vite build && tsc --emitDeclarationOnly --outDir dist && cp src/styles/index.css dist/styles.css",
    "build-storybook": "storybook build",
    "preview": "vite preview",
    "story": "storybook dev -p 6006 --no-open",
    "typecheck": "tsc --noEmit --strict --skipLibCheck",
    "svelte-check": "svelte-check --tsconfig ./tsconfig.json",
    "test": "vitest",
    "test:visual": "playwright test"
  },
  "keywords": [
    "svelte",
    "svelte5",
    "ui-library",
    "components",
    "design-system",
    "educational",
    "tailwind",
    "typescript",
    "accessibility",
    "theme",
    "dark-mode",
    "form-validation",
    "senka"
  ],
  "author": "Catalin Ungureanu",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/senka-ai/senka-ui.git"
  },
  "bugs": {
    "url": "https://github.com/senka-ai/senka-ui/issues"
  },
  "homepage": "https://github.com/senka-ai/senka-ui",
  "peerDependencies": {
    "svelte": "^5.0.0",
    "tailwindcss": "^4.0.0"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^4.0.1",
    "@playwright/test": "^1.53.0",
    "@storybook/addon-docs": "^9.0.16",
    "@storybook/addon-svelte-csf": "^5.0.7",
    "@storybook/sveltekit": "^9.0.16",
    "@sveltejs/adapter-auto": "^3.0.0",
    "@sveltejs/kit": "^2.16.0",
    "@sveltejs/vite-plugin-svelte": "^5.0.0",
    "@tailwindcss/forms": "^0.5.9",
    "@tailwindcss/typography": "^0.5.15",
    "@tailwindcss/vite": "^4.0.0",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^24.0.15",
    "jsdom": "^26.1.0",
    "playwright": "^1.53.0",
    "prettier": "^3.4.2",
    "prettier-plugin-svelte": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "storybook": "^9.0.16",
    "svelte": "^5.0.0",
    "svelte-check": "^4.0.0",
    "tailwindcss": "^4.0.0",
    "typescript": "^5.0.0",
    "vite": "^6.2.6",
    "vitest": "^3.2.3"
  }
}
