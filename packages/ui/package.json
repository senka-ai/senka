{
  "name": "@senka/ui",
  "version": "0.1.0",
  "description": "A modern Svelte 5 UI library",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "svelte": "./dist/index.js",
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./components/*": {
      "svelte": "./dist/components/*.svelte",
      "types": "./dist/components/*.d.ts",
      "default": "./dist/components/*.js"
    },
    "./icons/*": {
      "svelte": "./dist/icons/*.svelte",
      "types": "./dist/icons/*.d.ts",
      "default": "./dist/icons/*.js"
    },
    "./styles.css": "./dist/styles.css"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "CHANGELOG.md"
  ],
  "scripts": {
    "dev": "storybook dev -p 6006 --no-open",
    "build": "vite build && tsc --emitDeclarationOnly",
    "build-storybook": "storybook build",
    "preview": "vite preview",
    "story": "storybook dev -p 6006 --no-open",
    "typecheck": "tsc --noEmit --strict --skipLibCheck",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "test": "vitest",
    "test:visual": "playwright test"
  },
  "keywords": [
    "svelte",
    "ui-library",
    "components",
    "design-system",
    "educational",
    "tailwind"
  ],
  "author": "Catalin Ungureanu",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/catalin-ic/senka.git",
    "directory": "packages/ui"
  },
  "bugs": {
    "url": "https://github.com/catalin-ic/senka/issues"
  },
  "homepage": "https://senka-ui.github.io/storybook",
  "dependencies": {},
  "peerDependencies": {
    "svelte": "^5.0.0",
    "tailwindcss": "^4.0.0"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^4.0.1",
    "@playwright/test": "^1.53.0",
    "@storybook/addon-docs": "^9.0.16",
    "@storybook/addon-svelte-csf": "^5.0.7",
    "@storybook/sveltekit": "^9.0.16",
    "@sveltejs/adapter-auto": "^3.0.0",
    "@sveltejs/kit": "^2.16.0",
    "@sveltejs/vite-plugin-svelte": "^5.0.0",
    "@tailwindcss/forms": "^0.5.9",
    "@tailwindcss/typography": "^0.5.15",
    "@tailwindcss/vite": "^4.0.0",
    "@types/node": "^24.0.15",
    "playwright": "^1.53.0",
    "prettier": "^3.4.2",
    "prettier-plugin-svelte": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "storybook": "^9.0.16",
    "svelte": "^5.0.0",
    "svelte-check": "^4.0.0",
    "tailwindcss": "^4.0.0",
    "typescript": "^5.0.0",
    "vite": "^6.2.6",
    "vitest": "^3.2.3"
  }
}