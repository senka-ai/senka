{
  "name": "senka",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "author": "Catalin Ungureanu",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "prepare": "svelte-kit sync || echo ''",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "typecheck": "tsc --noEmit --strict --skipLibCheck",
    "format": "prettier --write .",
    "lint": "prettier --check .",
    "test:unit": "vitest",
    "test": "npm run test:unit -- --run",
    "story": "storybook dev -p 6006 --no-open",
    "build-storybook": "storybook build",
    "test:visual": "playwright test",
    "test:visual:ui": "playwright test --ui",
    "test:visual:update": "playwright test --update-snapshots",
    "test:visual:critical": "playwright test critical-components.spec.ts",
    "test:visual:all": "playwright test all-components.spec.ts",
    "test:visual:all:update": "playwright test all-components.spec.ts --update-snapshots",
    "test:visual:report": "playwright show-report"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^4.0.1",
    "@playwright/test": "^1.53.0",
    "@storybook/addon-docs": "^9.0.16",
    "@storybook/addon-svelte-csf": "^5.0.7",
    "@storybook/sveltekit": "^9.0.16",
    "@sveltejs/adapter-vercel": "^5.6.3",
    "@sveltejs/kit": "^2.16.0",
    "@sveltejs/vite-plugin-svelte": "^5.0.0",
    "@tailwindcss/forms": "^0.5.9",
    "@tailwindcss/typography": "^0.5.15",
    "@tailwindcss/vite": "^4.0.0",
    "@types/node": "^24.0.15",
    "playwright": "^1.53.0",
    "prettier": "^3.4.2",
    "prettier-plugin-svelte": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "storybook": "^9.0.16",
    "svelte": "^5.0.0",
    "svelte-check": "^4.0.0",
    "tailwindcss": "^4.0.0",
    "typescript": "^5.0.0",
    "vite": "^6.2.6",
    "vitest": "^3.2.3",
    "vitest-browser-svelte": "^0.1.0"
  }
}
