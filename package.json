{
  "name": "senka-monorepo",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "description": "Senka Monorepo",
  "author": "Catalin Ungureanu",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "ui:dev": "yarn workspace @senka-ai/ui dev",
    "ui:build": "yarn workspace @senka-ai/ui build",
    "ui:story": "yarn workspace @senka-ai/ui story",
    "ui:build-storybook": "yarn workspace @senka-ai/ui build-storybook",
    "ui:typecheck": "yarn workspace @senka-ai/ui typecheck",
    "ui:check": "yarn workspace @senka-ai/ui svelte-check",
    "ui:test": "yarn workspace @senka-ai/ui test",
    "ui:test:visual": "yarn workspace @senka-ai/ui test:visual",
    "ui:test:visual:update": "yarn workspace @senka-ai/ui test:visual:update",
    "ui:test:visual:docker": "yarn workspace @senka-ai/ui test:visual:docker",
    "ui:test:visual:docker:update": "yarn workspace @senka-ai/ui test:visual:docker:update",
    "ui:test:visual:docker:build": "yarn workspace @senka-ai/ui test:visual:docker:build",
    "ui:test:visual:update:all": "yarn ui:test:visual:update && yarn ui:test:visual:docker:update",
    "ui:report": "yarn workspace @senka-ai/ui playwright show-report",
    "app:dev": "yarn workspace senka-app dev",
    "app:build": "yarn workspace senka-app build",
    "app:preview": "yarn workspace senka-app preview",
    "app:story": "yarn workspace senka-app story",
    "app:typecheck": "yarn workspace senka-app typecheck",
    "app:check": "yarn workspace senka-app svelte-check",
    "app:test": "yarn workspace senka-app test",
    "layout:dev": "yarn workspace @senka-ai/layout-engine build && yarn workspace @senka-ai/layout-showcase dev",
    "layout:build": "yarn workspace @senka-ai/layout-engine build",
    "layout:typecheck": "yarn workspace @senka-ai/layout-engine typecheck",
    "layout:check": "yarn workspace @senka-ai/layout-engine check",
    "showcase:dev": "yarn workspace @senka-ai/layout-showcase dev",
    "showcase:build": "yarn workspace @senka-ai/layout-showcase build",
    "showcase:typecheck": "yarn workspace @senka-ai/layout-showcase typecheck",
    "showcase:check": "yarn workspace @senka-ai/layout-showcase check",
    "build": "yarn ui:build && yarn layout:build && yarn app:build",
    "typecheck": "yarn ui:typecheck && yarn layout:typecheck && yarn showcase:typecheck && yarn app:typecheck",
    "check": "yarn ui:check && yarn layout:check && yarn showcase:check && yarn app:check",
    "test": "yarn ui:test && yarn app:test",
    "format": "prettier --write .",
    "lint": "prettier --check ."
  },
  "devDependencies": {
    "prettier": "3.6.2"
  },
  "packageManager": "yarn@4.9.2"
}
